#!/usr/bin/env bash
# Pre-commit hook to ensure module checksums are always up-to-date

set -e

# Check if any module files changed
MODULES_CHANGED=$(git diff --cached --name-only | grep '^modules/ubs-.*\.sh$' || true)

if [[ -n "$MODULES_CHANGED" ]]; then
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  echo "üì¶ Module files changed - updating checksums..."
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  
  # Update checksums
  ./scripts/update_checksums.sh
  
  # Check if ubs file changed
  if git diff --exit-code ubs >/dev/null 2>&1; then
    echo "‚úì Checksums already up-to-date"
  else
    echo ""
    echo "‚úì Checksums updated in 'ubs' file"
    echo "  Automatically staging updated checksums..."
    git add ubs
    echo "  ‚úì Staged"
  fi
  
  echo ""
fi

# Check if ubs script changed and update SHA256SUMS
UBS_CHANGED=$(git diff --cached --name-only | grep '^ubs$' || true)

if [[ -n "$UBS_CHANGED" ]]; then
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
  echo "üìù ubs script changed - updating SHA256SUMS..."
  echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"

  # Update SHA256SUMS with new checksum
  sha256sum ubs > SHA256SUMS

  echo "‚úì SHA256SUMS updated"
  echo "  Automatically staging SHA256SUMS..."
  git add SHA256SUMS
  echo "  ‚úì Staged"
  echo ""
fi

# Always verify checksums match before allowing commit
echo "Verifying all checksums match..."
if ! ./scripts/verify_checksums.sh; then
  echo ""
  echo "‚ùå PRE-COMMIT HOOK FAILED"
  echo "Module checksums do NOT match!"
  echo ""
  echo "This should not happen if auto-update worked."
  echo "Please run: ./scripts/update_checksums.sh"
  exit 1
fi

echo "‚úì Pre-commit checks passed"
